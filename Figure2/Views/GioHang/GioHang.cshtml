@using Figure2.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="text-align:center;">THÔNG TIN GIỎ HÀNG</h2>
<table border="1">
    <tr style="background-color: aqua; font-size: 15px;font-weight:bold;text-align:center">
        <td>Ma Sach</td>
        <td>Ten Sach</td>
        <td>AnhBia</td>
        <td>So Luong</td>
        <td>Don Gia</td>
        <td>Thanh Tien</td>
        <td></td>
        <td></td>
        <td></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td align="center">
                @item.iMaFigure
            </td>
            <td>
                @item.sTenFigure
            </td>
            <td>
                <img src="~/img/products/@item.sAnh" style="width:100px;" />
            </td>
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { iMaFigure = item.iMaFigure }))
            {
                <td align="center">
                    <input type="number" min="1" name="txtSoLuong" value=" @item.iSoLuong" style="background-color:#f4ff94" />
                </td>
                <td align="center"> @string.Format("{0:#,##0,0}", @item.dDonGia)</td>
                <td align="center">@string.Format("{0:#,##0,0}", @item.dThanhTien)</td>

                <td><a href="@Url.Action("ChiTietFigure","Figure", new {id=item.iMaFigure})">Chi tiết</a></td>
                <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSach = item.iMaFigure })</td>
                <td><input type="submit" value="Cập nhật" /></td>
            }
        </tr>
    }
    <tr>
        <td colspan="4" style="text-align:right;color:red;font-weight:bold;padding-right:5px">
            Tong So Luong:@string.Format("{0:#,##0,0}", @ViewBag.TongSoLuong)
        </td>
        <td colspan="5" style="text-align:center;color:red;font-weight:bold">
            Tong tien:@string.Format("{0:#,##0,0}", @ViewBag.TongTien) VND
        </td>

    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right;">
        <td colspan="9">

            @Html.ActionLink("Xóa giỏ hàng", "XoaGioHang");
        </td>
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right;">
        <td colspan="9">

            @Html.ActionLink("Dat Hang", "DatHang", "GioHang");
        </td>
    </tr>
</table>

