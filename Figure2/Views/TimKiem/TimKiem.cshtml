@model IEnumerable<Figure2.Models.Product>

@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h3 style="text-align:center">Tìm kiếm</h3>
<br />

@{
    if (Model != null)
    {

        <table class="table">
            <tr>
                <th>
                  Tên sản phẩm
                </th>
                <th width="250px">
                   Mô tả
                </th>
                <th width="200px">
                  Giá
                </th>
                <th>
                   Số lượng
                </th>
                <th width="200px">
                 Danh mục
                </th>
                <th >
                   Ảnh
                </th>
                <th width="100px"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.tenSanPham)
                    </td>
                    <td style="text-align:center">
                      
                        @Html.Raw(item.moTa.ToString().Replace("\n", "</p><p>"))
                    </td>
                    <td style="text-align:center">
                        @Html.FormatValue(item.gia, "{0:#,##0}") VNĐ
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.soLuong)
                    </td>
                    <td style="text-align:center">

                        @Html.DisplayFor(modelItem => item.Category.tenDanhMuc)
                    </td>
                    <td style="text-align:center" >

                        <img width="140" src="~/img/products/@item.anh" alt="@item.tenSanPham">
                    </td>
                   
                    <td style="text-align:center"><a style="color:brown" href="@Url.Action("ChiTietFigure","Figure", new {id=item.maSanPham})">Chi tiết</a></td>
                   

                </tr>
            }
            </table>
            <br />
        }
        }
    }

<style>
    a {
        text-decoration: none;
    }
</style>