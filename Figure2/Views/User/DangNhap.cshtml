@{
    ViewBag.Title = "Timkiem";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style type="text/css">
    td {
        height: 40px;
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<h2 style="text-align:center;">ĐĂNG NHẬP</h2>
<table align="center">
    <table align="center">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            if (Request.Cookies["tenNguoiDung"] != null && Request.Cookies["matKhau"] != null)
            {
                <tr>
                    <td>Tên đăng nhập: </td>
                    <td>
                        @Html.TextBox("tenNguoiDung", Request.Cookies["tenNguoiDung"].Value)

                        @ViewData["Err1"]
                    </td>
                </tr>
                <tr>
                    <td>Mật khẩu: </td>
                    <td>
                        @Html.Password("matKhau", Request.Cookies["matKhau"].Value) @ViewData["Err2"]
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>Tên đăng nhập: </td>
                    <td>
                        @Html.TextBox("tenNguoiDung") @ViewData["Err1"]
                    </td>
                </tr>
                <tr>
                    <td>Mật khẩu: </td>
                    <td>
                        @Html.Password("matKhau")

                        @ViewData["Err2"]
                    </td>
                </tr>
            }

            <tr>
                <td></td>
                <td>
                    @Html.CheckBox("remember") <span style="font-style:italic">Nhớ thông tin đăng nhập</span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Đăng nhập" />
                </td>
            </tr>
        }
    </table>
