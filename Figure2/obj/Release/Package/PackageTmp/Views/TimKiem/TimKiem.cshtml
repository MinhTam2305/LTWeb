@model IEnumerable<Figure2.Models.Product>

@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h3 style="text-align:center">Tìm kiếm</h3>
@using (Html.BeginForm("TimKiem", "TimKiem", FormMethod.Get))
{
    <p>
        <input type="text" name="q" value="@ViewBag.Search" placeholder="Nhập sản phẩm cần tìm..." size="100" /> <input type="submit" value="Tìm kiếm" />
    </p>
}
@{
    if (Model != null)
    {

        <table class="table">
            <tr>
                <th>
                  Tên sản phẩm
                </th>
                <th width="150px">
                   Mô tả
                </th>
                <th width="120px">
                  Giá
                </th>
                <th>
                   Số lượng
                </th>
                <th width="200px">
                 Danh mục
                </th>
                <th>
                   Ảnh
                </th>
                <th width="100px"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.tenSanPham)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.moTa)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.gia)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.soLuong)
                    </td>
                    <td style="text-align:center">

                        @Html.DisplayFor(modelItem => item.Category.tenDanhMuc)
                    </td>
                    <td style="text-align:center">

                        @Html.DisplayFor(modelItem => item.anh)
                    </td>
                   
                    <td style="text-align:center"><a style="color:brown" href="@Url.Action("ChiTietFigure","Figure", new {id=item.maSanPham})">Chi tiết</a></td>
                   

                </tr>
            }
            </table>
            <br />
        }
        }
    }

<style>
    a {
        text-decoration: none;
    }
</style>