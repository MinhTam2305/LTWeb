@using Figure2.Models
@using PagedList.Mvc;
@model PagedList.PagedList<Figure2.Models.DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h3 style="text-align:center">Trang quản lý đơn hàng</h3>


<table class="table">
    <tr>
        <th>
           Mã người dùng
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao
        </th>
        <th>
           Trạng thái
        </th>
        <th>
          Đã thanh toán
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiDung.tenNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngayDatHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGiao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaThanhToan)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.maDonHang }) |
               
                @Html.ActionLink("Xóa", "Delete", new { id = item.maDonHang })
            </td>
        </tr>
    }

</table>
<div>
    Trang @(Model.PageCount < Model.PageNumber ? 0 :Model.PageNumber)/@Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>
