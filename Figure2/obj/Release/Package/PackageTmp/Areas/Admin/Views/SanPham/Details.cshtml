@model Figure2.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }
</style>
<h2 style="text-align:center">Chi tiết Figure</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenSanPham)
        </dd>

        <dt>
            Mô tả sản phẩm
        </dt>

        <dd>
            @Html.Raw(@Model.moTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @Html.FormatValue(@Model.gia, "{0:#,##0}") VNĐ
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soLuong)
        </dd>

        <dt>
            Danh mục
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.tenDanhMuc)
        </dd>

        <dt>
            Hình
        </dt>

        <dd>
            <img src="~/img/products/@Model.anh" alt=" @Model.tenSanPham">
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.maSanPham }) |
    @Html.ActionLink("Back to List", "Index")
</p>
