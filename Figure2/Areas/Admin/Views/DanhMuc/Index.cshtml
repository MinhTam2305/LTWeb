@model IEnumerable<Figure2.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Quản lý danh mục Figure</h2>

<p>
    @Html.ActionLink("Thêm danh mục sản phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Tên danh mục
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tenDanhMuc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.maDanhMuc }) |
            @Html.ActionLink("Details", "Details", new { id=item.maDanhMuc }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.maDanhMuc })
        </td>
    </tr>
}

</table>
