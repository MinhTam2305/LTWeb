@model IEnumerable<Figure2.Models.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Quản lý Slider</h2>

<p>
    @Html.ActionLink("Thêm hình mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã hình
        </th>
        <th>
           Hình
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.maHinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.anh)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.maHinh }) |
            @Html.ActionLink("Details", "Details", new { id = item.maHinh }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.maHinh })
        </td>
    </tr>
}

</table>
